{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../out-tsc/app",
    "module": "es2015",
    "types": [],
    "baseUrl": "./",
    "paths": {
      "*": [
        "*",
        "./app/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "test.ts",
    "**/*.spec.ts"
  ],
    "include": [
      "../src/**/*",
      "../models/**/*.ts"
    ],
    "files": [
      "main.ts",
      "polyfills.ts",
      "typings.d.ts"
       ],
    "filesGlob": [
      "main.ts",
      "typings.d.ts",
      "app/**/*.ts"
    ]
}
