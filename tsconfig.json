{
  "compileOnSave": false,
  "compilerOptions": {
    "removeComments": true,
    "allowJs": true,
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es7",
      "dom"
    ],
    "baseUrl": "src",
    "paths": {
      "*": [
        "*",
        "./app/*"
      ],
      "@angular/*": [
        "../node_modules/@angular/*"
      ],
    }
  }
}
